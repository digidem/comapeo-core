{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@hyperswarm/secret-stream": [
        "./node_modules/@digidem/types/vendor/@hyperswarm/secret-stream/index.d.ts"
      ],
      "*": ["./types", "./node_modules/@digidem/types/vendor/*/index.d.ts"]
    }
  },
  "files": ["tests/schema.js"],
  "include": ["src/**/*", "types/**/*.d.ts", "test-e2e/**/*"],
  "exclude": ["node_modules", "src/generated/*.js"]
}
