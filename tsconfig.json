{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "node_modules/@digidem/types/vendor"],
    "paths": {
      "*": ["./types"],
      "@gravitysoftware/dnssd": [
        "./node_modules/multicast-service-discovery/types/gravitysoftware__dnssd"
      ]
    }
  },
  "files": ["tests/schema.js", "test-e2e/project-crud.js"],
  "include": ["src/**/*", "types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "src/rpc/messages.js",
    "src/core-manager/messages.js"
  ]
}
