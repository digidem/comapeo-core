{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "es2022",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "typeRoots": ["types", "node_modules/@types"],
    "paths": {
      "*": ["./types"],
      "@gravitysoftware/dnssd": [
        "./node_modules/multicast-service-discovery/types/gravitysoftware__dnssd"
      ]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "tmp", "tests", "examples"]
}
