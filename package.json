{
  "name": "@mapeo/core",
  "version": "9.0.0-alpha.0",
  "description": "Offline p2p mapping library",
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": "./index.js",
    "./authstore": "./lib/authstore/index.js",
    "./datastore": "./lib/datastore/index.js",
    "./discovery": "./lib/discovery/index.js",
    "./datatype": "./lib/datatype/index.js",
    "./sqlite": "./lib/sqlite.js"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "prettier . --write",
    "test": "brittle tests/*.js",
    "type": "tsc",
    "deps": "depcheck --ignore-dirs=docs,types --ignores=@types/*,typescript,typedoc,typedoc-plugin-markdown,@hyperswarm/testnet",
    "doc": "typedoc --plugin typedoc-plugin-markdown --out docs/api",
    "protobuf": "node ./scripts/build-messages.js",
    "postinstall": "patch-package"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digidem/mapeo-core.git"
  },
  "authors": [
    "Karissa McKelvey",
    "Gregor MacLennan",
    "noffle"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digidem/mapeo-core/issues"
  },
  "homepage": "https://github.com/digidem/mapeo-core#readme",
  "devDependencies": {
    "@hyperswarm/testnet": "^3.1.0",
    "@types/json-schema": "^7.0.11",
    "@types/node": "^18.11.17",
    "@types/streamx": "^2.9.1",
    "brittle": "^3.1.1",
    "depcheck": "^1.4.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.8.1",
    "random-access-memory": "^6.1.0",
    "rimraf": "^4.1.2",
    "ts-proto": "^1.138.0",
    "type-fest": "^3.6.1",
    "typedoc": "^0.23.23",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@hyperswarm/secret-stream": "^6.1.2",
    "@mapeo/crypto": "^1.0.0-alpha.4",
    "@mapeo/sqlite-indexer": "github:digidem/mapeo-sqlite-indexer#no-prepare",
    "b4a": "^1.6.1",
    "base32.js": "^0.1.0",
    "better-sqlite3": "^8.0.1",
    "corestore": "^6.4.0",
    "hypercore": "^10.5.3",
    "hypercore-crypto": "^3.3.1",
    "hyperdrive": "^11.0.0-alpha.10",
    "hyperswarm": "^4.3.5",
    "mapeo-schema": "github:digidem/mapeo-schema#protobufsTypescript",
    "multi-core-indexer": "github:digidem/multi-core-indexer#no-prepare",
    "multicast-service-discovery": "^4.0.4",
    "patch-package": "^6.5.1",
    "protobufjs": "^7.1.2",
    "sodium-universal": "^3.1.0",
    "tiny-typed-emitter": "^2.1.0"
  }
}
